<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
    <vm>false</vm>

    <vm-settings>
        <setting name="machine_type" value="g1-small"/>
    </vm-settings>

    <manual-scaling>
        <instances>1</instances>
    </manual-scaling>

    <application>epvin-loxal</application>
    <version>1</version>
    <ssl-enabled>true</ssl-enabled>
    <sessions-enabled>false</sessions-enabled>
    <precompilation-enabled>false</precompilation-enabled>
    <threadsafe>false</threadsafe>

    <admin-console>
        <page name="App Stats" url="/appstats/stats"/>
    </admin-console>

    <inbound-services>
        <service>warmup</service>
    </inbound-services>

    <static-files>
        <include path="**/*.json"/>
        <include path="**/*.txt"/>
        <include path="**/*.gif"/>
        <include path="**/*.png"/>
        <include path="**/*.ico"/>
        <include path="**/*.html"/>
        <include path="**/*.css"/>
        <include path="**/*.js"/>
        <include path="**/*.jpg"/>
        <include path="**/*.pdf"/>
        <include path="**/*"/>
        <include path="*"/>
    </static-files>

    <system-properties>
        <property name="admin.name" value="Alexander Orlov"/>
        <property name="admin.mail" value="alexander.orlov@loxal.net"/>
        <property name="java.util.logging.config.file" value="WEB-INF/logging.properties"/>
    </system-properties>

    <env-variables>
    </env-variables>

