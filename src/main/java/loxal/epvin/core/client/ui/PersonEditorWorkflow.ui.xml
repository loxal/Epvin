<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:e="urn:import:loxal.epvin.core.client.ui.editor"
        >

    <g:DialogBox ui:field="dialog" modal="true">
        <g:caption>Editing a person...</g:caption>
        <g:HTMLPanel ui:field="contents">
            <e:EmployeeEditor ui:field="ee"/>
            <hr/>
            <g:CheckBox ui:field="favorite">Favorite
            </g:CheckBox>
            <div>
                <g:Button ui:field="cancel">Cancel</g:Button>
                <g:Button ui:field="save">Save</g:Button>
            </div>
        </g:HTMLPanel>
    </g:DialogBox>
</ui:UiBinder>